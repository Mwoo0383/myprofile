{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",

    "target": "ES2021",
    "outDir": "./dist",

    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  }
}